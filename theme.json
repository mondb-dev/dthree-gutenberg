{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1140px",
            "wideSize": "1320px"
        },
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultGradients": true,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0d6efd",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#6c757d",
                    "name": "Secondary"
                },
                {
                    "slug": "success",
                    "color": "#198754",
                    "name": "Success"
                },
                {
                    "slug": "danger",
                    "color": "#dc3545",
                    "name": "Danger"
                },
                {
                    "slug": "warning",
                    "color": "#ffc107",
                    "name": "Warning"
                },
                {
                    "slug": "info",
                    "color": "#0dcaf0",
                    "name": "Info"
                },
                {
                    "slug": "light",
                    "color": "#f8f9fa",
                    "name": "Light"
                },
                {
                    "slug": "dark",
                    "color": "#212529",
                    "name": "Dark"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "success-gradient",
                    "gradient": "linear-gradient(135deg, #198754 0%, #146c43 100%)",
                    "name": "Success Gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "XX Large"
                }
            ],
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
                    "slug": "system",
                    "name": "System Font"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"],
            "spacingSizes": [
                {
                    "slug": "small",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "2rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "3rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "4rem",
                    "name": "Extra Large"
                }
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "spacing": {
                "gutter": "1.5rem"
            }
        }
    },
    "styles": {
        "color": {
            "background": "#ffffff",
            "text": "#212529"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "1rem",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "#0d6efd"
                },
                ":hover": {
                    "color": {
                        "text": "#0a58ca"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "2.5rem",
                    "lineHeight": "1.2",
                    "fontWeight": "700"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1.5rem"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "2rem",
                    "lineHeight": "1.3",
                    "fontWeight": "700"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1rem"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "1.75rem",
                    "lineHeight": "1.4",
                    "fontWeight": "600"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1rem"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "1.5rem",
                    "lineHeight": "1.4",
                    "fontWeight": "600"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "1.25rem",
                    "lineHeight": "1.5",
                    "fontWeight": "600"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "1rem",
                    "lineHeight": "1.5",
                    "fontWeight": "600"
                }
            },
            "button": {
                "color": {
                    "background": "#0d6efd",
                    "text": "#ffffff"
                },
                "border": {
                    "radius": "0.25rem"
                },
                "spacing": {
                    "padding": {
                        "top": "0.5rem",
                        "bottom": "0.5rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "#0a58ca"
                    }
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
                        "top": "2rem",
                        "bottom": "1rem"
                    }
                }
            },
            "core/button": {
                "border": {
                    "radius": "0.25rem"
                },
                "spacing": {
                    "padding": {
                        "top": "0.5rem",
                        "bottom": "0.5rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                }
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "bottom": "1.5rem"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": ["page"]
        },
        {
            "name": "full-width",
            "title": "Full Width",
            "postTypes": ["page", "post"]
        }
    ]
}
